<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px"></div>
    <script>
        const MAPBOX_TOKEN = '<%-process.env.MAPBOX_TOKEN%>'
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/scripts/clusterMap.js" defer></script>

    <h1 class="mt-4">All Campgrounds</h1>
    <div> <a href="/campgrounds/new">Create a new campground</a></div>
    <% if (campgrounds.length === 0) { %>
        <h2 class="text-center py-5">There are no campgrounds to show yet.<br> <a class="link-primary" href="/campgrounds/new">Create the first one!</a></h2>
    <% } %>
    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src=<%=campground.images[0]?.url || '/images/default-image.jpg'%> alt="campground image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="text-muted">
                            <%= campground.location %>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id%>">View <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>